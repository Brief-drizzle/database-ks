<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="user.mapper.TeacherSubjectMapper">
	<resultMap id="BaseResultMap" type="user.entity.TeacherSubject">
            <result column="subject_id" property="subjectId" />
	        <result column="teacher_id" property="teacherId" />
		</resultMap>  
    
    <!-- 表字段 -->
    <sql id="baseColumns">
         t.subject_id
        , t.teacher_id
        </sql> 
    
    <!-- 查询全部 -->
    <select id="listAll" resultMap="BaseResultMap">
		SELECT         
        	<include refid="baseColumns" />
		FROM dbo.teacher_subject t
	</select>
 
 	<!-- 根据主键获取单条记录 -->
    <select id="getById" resultMap="BaseResultMap" parameterType="String">
		SELECT         
        	<include refid="baseColumns" />
		FROM dbo.teacher_subject t
		WHERE subject_id = #{subjectId}
	</select>

	<!-- 插入全部字段 -->
    <insert id="insert" parameterType="user.entity.TeacherSubject"
		keyProperty="subjectId" keyColumn="subject_id" useGeneratedKeys="true"
    >
	INSERT INTO dbo.teacher_subject
    <trim prefix="(" suffix=")" suffixOverrides=",">	 
        	    	subject_id,
    	        	    	teacher_id,
    	        </trim>
    <trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
        	        #{subjectId},                   
    	        	        #{teacherId},                   
    	        </trim>
	</insert>
    
    <!-- 插入不为NULL的字段 -->
    <insert id="insertIgnoreNull" parameterType="user.entity.TeacherSubject"
        keyProperty="subjectId" keyColumn="subject_id" useGeneratedKeys="true"
        >
        INSERT INTO dbo.teacher_subject    
        <trim prefix="(" suffix=")" suffixOverrides=",">	 

                                                <if test="subjectId != null">
                   subject_id,
                    </if>
                                                                <if test="teacherId != null">
                   teacher_id,
                    </if>
                                    </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
                                                <if test="subjectId != null" >
                    #{subjectId},                    
                    </if>
                                                                <if test="teacherId != null" >
                    #{teacherId},                    
                    </if>
                                    </trim>
    </insert>

	<!-- 更新,更新全部字段 -->
    <update id="update" parameterType="user.entity.TeacherSubject">
    UPDATE dbo.teacher_subject
     <set>		
                                      </set>	
    WHERE subject_id = #{subjectId}
    </update>  
    
    
    <!-- 更新不为NULL的字段 -->
    <update id="updateIgnoreNull" parameterType="user.entity.TeacherSubject">
    UPDATE dbo.teacher_subject
    <set>
    	                                            </set>
    WHERE subject_id = #{subjectId}
    </update>

		
	<!-- 根据主键删除记录 -->
	<delete id="delete" parameterType="user.entity.TeacherSubject">
		UPDATE dbo.teacher_subject
		SET is_deleted=1
		WHERE subject_id = #{subjectId}
	</delete>


</mapper>