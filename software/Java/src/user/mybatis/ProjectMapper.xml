<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="user.dao.ProjectMapper">
	<resultMap id="BaseResultMap" type="user.entity.Project">
            <result column="project_id" property="projectId" />
	        <result column="category_id" property="categoryId" />
	        <result column="tutor_id" property="tutorId" />
	        <result column="administrator_id" property="administratorId" />
	        <result column="project_name" property="projectName" />
	        <result column="starttime" property="starttime" />
	        <result column="endtime" property="endtime" />
	        <result column="allfunds" property="allfunds" />
	        <result column="approve_status" property="approveStatus" />
	        <result column="approve_time" property="approveTime" />
		</resultMap>  
    
    <!-- 表字段 -->
    <sql id="baseColumns">
         t.project_id
        , t.category_id
        , t.tutor_id
        , t.administrator_id
        , t.project_name
        , t.starttime
        , t.endtime
        , t.allfunds
        , t.approve_status
        , t.approve_time
        </sql> 
    
    <!-- 查询全部 -->
    <select id="listAll" resultMap="BaseResultMap">
		SELECT         
        	<include refid="baseColumns" />
		FROM dbo.Project t
	</select>
 
 	<!-- 根据主键获取单条记录 -->
    <select id="getById" resultMap="BaseResultMap" parameterType="String">
		SELECT         
        	<include refid="baseColumns" />
		FROM dbo.Project t
		WHERE project_id = #{projectId}
	</select>

	<!-- 插入全部字段 -->
    <insert id="insert" parameterType="user.entity.Project"
		keyProperty="projectId" keyColumn="project_id" useGeneratedKeys="true"
    >
	INSERT INTO dbo.Project
    <trim prefix="(" suffix=")" suffixOverrides=",">	 
        	    	project_id,
    	        	    	category_id,
    	        	    	tutor_id,
    	        	    	administrator_id,
    	        	    	project_name,
    	        	    	starttime,
    	        	    	endtime,
    	        	    	allfunds,
    	        	    	approve_status,
    	        	    	approve_time,
    	        </trim>
    <trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
        	        #{projectId},                   
    	        	        #{categoryId},                   
    	        	        #{tutorId},                   
    	        	        #{administratorId},                   
    	        	        #{projectName},                   
    	        	        #{starttime},                   
    	        	        #{endtime},                   
    	        	        #{allfunds},                   
    	        	        #{approveStatus},                   
    	        	        #{approveTime},                   
    	        </trim>
	</insert>
    
    <!-- 插入不为NULL的字段 -->
    <insert id="insertIgnoreNull" parameterType="user.entity.Project"
        keyProperty="projectId" keyColumn="project_id" useGeneratedKeys="true"
        >
        INSERT INTO dbo.Project    
        <trim prefix="(" suffix=")" suffixOverrides=",">	 

                                                <if test="projectId != null">
                   project_id,
                    </if>
                                                                <if test="categoryId != null">
