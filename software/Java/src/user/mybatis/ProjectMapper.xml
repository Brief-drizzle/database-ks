                    #{starttime},                    
                    </if>
                                                                <if test="endtime != null" >
                    #{endtime},                    
                    </if>
                                                                <if test="allfunds != null" >
                    #{allfunds},                    
                    </if>
                                                                <if test="approveStatus != null" >
                    #{approveStatus},                    
                    </if>
                                                                <if test="approveTime != null" >
                    #{approveTime},                    
                    </if>
                                    </trim>
    </insert>

	<!-- 更新,更新全部字段 -->
    <update id="update" parameterType="user.entity.Project">
    UPDATE dbo.Project
     <set>		
                                     category_id=#{categoryId},        
                                tutor_id=#{tutorId},        
                                administrator_id=#{administratorId},        
                                project_name=#{projectName},        
                                starttime=#{starttime},        
                                endtime=#{endtime},        
                                allfunds=#{allfunds},        
                                approve_status=#{approveStatus},        
                                approve_time=#{approveTime},        
                   </set>	
    WHERE project_id = #{projectId}
    </update>  
    
    
    <!-- 更新不为NULL的字段 -->
    <update id="updateIgnoreNull" parameterType="user.entity.Project">
    UPDATE dbo.Project
    <set>
    	                                                <if test="categoryId != null" >
                category_id=#{categoryId},                 
                </if>
                                                <if test="tutorId != null" >
                tutor_id=#{tutorId},                 
                </if>
                                                <if test="administratorId != null" >
