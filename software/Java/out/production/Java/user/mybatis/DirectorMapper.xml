<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="user.mapper.DirectorMapper">
	<resultMap id="BaseResultMap" type="user.entity.Director">
            <result column="director_id" property="directorId" />
	        <result column="teacher_id" property="teacherId" />
	        <result column="administrator_id" property="administratorId" />
	        <result column="subject_id" property="subjectId" />
	        <result column="is_director" property="isDirector" />
		</resultMap>  
    
    <!-- 表字段 -->
    <sql id="baseColumns">
         t.director_id
        , t.teacher_id
        , t.administrator_id
        , t.subject_id
        , t.is_director
        </sql> 
    
    <!-- 查询全部 -->
    <select id="listAll" resultMap="BaseResultMap">
		SELECT         
        	<include refid="baseColumns" />
		FROM dbo.director t
	</select>
 
 	<!-- 根据主键获取单条记录 -->
    <select id="getById" resultMap="BaseResultMap" parameterType="String">
		SELECT         
        	<include refid="baseColumns" />
		FROM dbo.director t
		WHERE director_id = #{directorId}
	</select>

	<!-- 插入全部字段 -->
    <insert id="insert" parameterType="user.entity.Director"
		keyProperty="directorId" keyColumn="director_id" useGeneratedKeys="true"
    >
	INSERT INTO dbo.director
    <trim prefix="(" suffix=")" suffixOverrides=",">	 
        	    	director_id,
    	        	    	teacher_id,
    	        	    	administrator_id,
    	        	    	subject_id,
    	        	    	is_director,
    	        </trim>
    <trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
        	        #{directorId},                   
    	        	        #{teacherId},                   
    	        	        #{administratorId},                   
    	        	        #{subjectId},                   
    	        	        #{isDirector},                   
    	        </trim>
	</insert>
    
    <!-- 插入不为NULL的字段 -->
    <insert id="insertIgnoreNull" parameterType="user.entity.Director"
        keyProperty="directorId" keyColumn="director_id" useGeneratedKeys="true"
        >
        INSERT INTO dbo.director    
        <trim prefix="(" suffix=")" suffixOverrides=",">	 

                                                <if test="directorId != null">
                   director_id,
                    </if>
                                                                <if test="teacherId != null">
                   teacher_id,
                    </if>
                                                                <if test="administratorId != null">
                   administrator_id,
                    </if>
                                                                <if test="subjectId != null">
                   subject_id,
                    </if>
                                                                <if test="isDirector != null">
                   is_director,
                    </if>
                                    </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
                                                <if test="directorId != null" >
                    #{directorId},                    
                    </if>
                                                                <if test="teacherId != null" >
                    #{teacherId},                    
                    </if>
                                                                <if test="administratorId != null" >
                    #{administratorId},                    
                    </if>
                                                                <if test="subjectId != null" >
                    #{subjectId},                    
                    </if>
                                                                <if test="isDirector != null" >
                    #{isDirector},                    
                    </if>
                                    </trim>
    </insert>

	<!-- 更新,更新全部字段 -->
    <update id="update" parameterType="user.entity.Director">
    UPDATE dbo.director
     <set>		
                                     teacher_id=#{teacherId},        
                                administrator_id=#{administratorId},        
                                subject_id=#{subjectId},        
                                is_director=#{isDirector},        
                   </set>	
    WHERE director_id = #{directorId}
    </update>  
    
    
    <!-- 更新不为NULL的字段 -->
    <update id="updateIgnoreNull" parameterType="user.entity.Director">
    UPDATE dbo.director
    <set>
    	                                                <if test="teacherId != null" >
                teacher_id=#{teacherId},                 
                </if>
                                                <if test="administratorId != null" >
                administrator_id=#{administratorId},                 
                </if>
                                                <if test="subjectId != null" >
                subject_id=#{subjectId},                 
                </if>
                                                <if test="isDirector != null" >
                is_director=#{isDirector},                 
                </if>
                        </set>
    WHERE director_id = #{directorId}
    </update>

		
	<!-- 根据主键删除记录 -->
	<delete id="delete" parameterType="user.entity.Director">
		UPDATE dbo.director
		SET is_deleted=1
		WHERE director_id = #{directorId}
	</delete>


</mapper>