<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="user.dao.AdministratorsMapper">
	<resultMap id="BaseResultMap" type="user.entity.Administrators">
            <result column="administrator_id" property="administratorId" />
	        <result column="administrator_name" property="administratorName" />
	        <result column="administrator_work" property="administratorWork" />
	        <result column="administrator_phone" property="administratorPhone" />
	        <result column="administrator_email" property="administratorEmail" />
		</resultMap>  
    
    <!-- 表字段 -->
    <sql id="baseColumns">
         t.administrator_id
        , t.administrator_name
        , t.administrator_work
        , t.administrator_phone
        , t.administrator_email
        </sql> 
    
    <!-- 查询全部 -->
    <select id="listAll" resultMap="BaseResultMap">
		SELECT         
        	<include refid="baseColumns" />
		FROM dbo.administrators t
	</select>
 
 	<!-- 根据主键获取单条记录 -->
    <select id="getById" resultMap="BaseResultMap" parameterType="String">
		SELECT         
        	<include refid="baseColumns" />
		FROM dbo.administrators t
		WHERE administrator_id = #{administratorId}
	</select>

	<!-- 插入全部字段 -->
    <insert id="insert" parameterType="user.entity.Administrators"
		keyProperty="administratorId" keyColumn="administrator_id" useGeneratedKeys="true"
    >
	INSERT INTO dbo.administrators
    <trim prefix="(" suffix=")" suffixOverrides=",">	 
        	    	administrator_id,
    	        	    	administrator_name,
    	        	    	administrator_work,
    	        	    	administrator_phone,
    	        	    	administrator_email,
    	        </trim>
    <trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
        	        #{administratorId},                   
    	        	        #{administratorName},                   
    	        	        #{administratorWork},                   
    	        	        #{administratorPhone},                   
    	        	        #{administratorEmail},                   
    	        </trim>
	</insert>
    
    <!-- 插入不为NULL的字段 -->
    <insert id="insertIgnoreNull" parameterType="user.entity.Administrators"
        keyProperty="administratorId" keyColumn="administrator_id" useGeneratedKeys="true"
        >
        INSERT INTO dbo.administrators    
        <trim prefix="(" suffix=")" suffixOverrides=",">	 

                                                <if test="administratorId != null">
                   administrator_id,
                    </if>
                                                                <if test="administratorName != null">
                   administrator_name,
                    </if>
                                                                <if test="administratorWork != null">
                   administrator_work,
                    </if>
                                                                <if test="administratorPhone != null">
                   administrator_phone,
                    </if>
                                                                <if test="administratorEmail != null">
                   administrator_email,
                    </if>
                                    </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
                                                <if test="administratorId != null" >
                    #{administratorId},                    
                    </if>
                                                                <if test="administratorName != null" >
                    #{administratorName},                    
                    </if>
                                                                <if test="administratorWork != null" >
                    #{administratorWork},                    
                    </if>
                                                                <if test="administratorPhone != null" >
                    #{administratorPhone},                    
                    </if>
                                                                <if test="administratorEmail != null" >
                    #{administratorEmail},                    
                    </if>
                                    </trim>
    </insert>

	<!-- 更新,更新全部字段 -->
    <update id="update" parameterType="user.entity.Administrators">
    UPDATE dbo.administrators
     <set>		
                                     administrator_name=#{administratorName},        
                                administrator_work=#{administratorWork},        
                                administrator_phone=#{administratorPhone},        
                                administrator_email=#{administratorEmail},        
                   </set>	
    WHERE administrator_id = #{administratorId}
    </update>  
    
    
    <!-- 更新不为NULL的字段 -->
    <update id="updateIgnoreNull" parameterType="user.entity.Administrators">
    UPDATE dbo.administrators
    <set>
    	                                                <if test="administratorName != null" >
                administrator_name=#{administratorName},                 
                </if>
                                                <if test="administratorWork != null" >
                administrator_work=#{administratorWork},                 
                </if>
                                                <if test="administratorPhone != null" >
                administrator_phone=#{administratorPhone},                 
                </if>
                                                <if test="administratorEmail != null" >
                administrator_email=#{administratorEmail},                 
                </if>
                        </set>
    WHERE administrator_id = #{administratorId}
    </update>

		
	<!-- 根据主键删除记录 -->
	<delete id="delete" parameterType="user.entity.Administrators">
		UPDATE dbo.administrators
		SET is_deleted=1
		WHERE administrator_id = #{administratorId}
	</delete>


</mapper>