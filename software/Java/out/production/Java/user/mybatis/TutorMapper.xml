<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="user.dao.TutorMapper">
	<resultMap id="BaseResultMap" type="user.entity.Tutor">
            <result column="tutor_id" property="tutorId" />
	        <result column="teacher_id" property="teacherId" />
	        <result column="administrator_id" property="administratorId" />
	        <result column="istutor" property="istutor" />
		</resultMap>  
    
    <!-- 表字段 -->
    <sql id="baseColumns">
         t.tutor_id
        , t.teacher_id
        , t.administrator_id
        , t.istutor
        </sql> 
    
    <!-- 查询全部 -->
    <select id="listAll" resultMap="BaseResultMap">
		SELECT         
        	<include refid="baseColumns" />
		FROM dbo.tutor t
	</select>
 
 	<!-- 根据主键获取单条记录 -->
    <select id="getById" resultMap="BaseResultMap" parameterType="String">
		SELECT         
        	<include refid="baseColumns" />
		FROM dbo.tutor t
		WHERE tutor_id = #{tutorId}
	</select>

	<!-- 插入全部字段 -->
    <insert id="insert" parameterType="user.entity.Tutor"
		keyProperty="tutorId" keyColumn="tutor_id" useGeneratedKeys="true"
    >
	INSERT INTO dbo.tutor
    <trim prefix="(" suffix=")" suffixOverrides=",">	 
        	    	tutor_id,
    	        	    	teacher_id,
    	        	    	administrator_id,
    	        	    	istutor,
    	        </trim>
    <trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
        	        #{tutorId},                   
    	        	        #{teacherId},                   
    	        	        #{administratorId},                   
    	        	        #{istutor},                   
    	        </trim>
	</insert>
    
    <!-- 插入不为NULL的字段 -->
    <insert id="insertIgnoreNull" parameterType="user.entity.Tutor"
        keyProperty="tutorId" keyColumn="tutor_id" useGeneratedKeys="true"
        >
        INSERT INTO dbo.tutor    
        <trim prefix="(" suffix=")" suffixOverrides=",">	 

                                                <if test="tutorId != null">
                   tutor_id,
                    </if>
                                                                <if test="teacherId != null">
                   teacher_id,
                    </if>
                                                                <if test="administratorId != null">
                   administrator_id,
                    </if>
                                                                <if test="istutor != null">
                   istutor,
                    </if>
                                    </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
                                                <if test="tutorId != null" >
                    #{tutorId},                    
                    </if>
                                                                <if test="teacherId != null" >
                    #{teacherId},                    
                    </if>
                                                                <if test="administratorId != null" >
                    #{administratorId},                    
                    </if>
                                                                <if test="istutor != null" >
                    #{istutor},                    
                    </if>
                                    </trim>
    </insert>

	<!-- 更新,更新全部字段 -->
    <update id="update" parameterType="user.entity.Tutor">
    UPDATE dbo.tutor
     <set>		
                                     teacher_id=#{teacherId},        
                                administrator_id=#{administratorId},        
                                istutor=#{istutor},        
                   </set>	
    WHERE tutor_id = #{tutorId}
    </update>  
    
    
    <!-- 更新不为NULL的字段 -->
    <update id="updateIgnoreNull" parameterType="user.entity.Tutor">
    UPDATE dbo.tutor
    <set>
    	                                                <if test="teacherId != null" >
                teacher_id=#{teacherId},                 
                </if>
                                                <if test="administratorId != null" >
                administrator_id=#{administratorId},                 
                </if>
                                                <if test="istutor != null" >
                istutor=#{istutor},                 
                </if>
                        </set>
    WHERE tutor_id = #{tutorId}
    </update>

		
	<!-- 根据主键删除记录 -->
	<delete id="delete" parameterType="user.entity.Tutor">
		UPDATE dbo.tutor
		SET is_deleted=1
		WHERE tutor_id = #{tutorId}
	</delete>


</mapper>